<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.itheima.tabindicator.library.TabIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:tiTabMode="triangle"
        itheima:tiTriangleHeight="8dp"
        itheima:tiTriangleStrokeWidth="1dp"
        itheima:tiTriangleStyle="stroke"
        itheima:tiTabBackground="@drawable/tab_bg_selector"
        itheima:tiTabTextColor="@color/tab_textcolor_selector"
        itheima:tiTriangleColor="#ff0000"
        itheima:tiTriangleWidth="12dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
