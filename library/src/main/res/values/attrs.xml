<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabIndicator">
        <attr name="tiTabPaddingLeft" format="reference|dimension" />
        <attr name="tiTabPaddingRight" format="reference|dimension" />
        <attr name="tiTabPaddingTop" format="reference|dimension" />
        <attr name="tiTabPaddingBottom" format="reference|dimension" />

        <attr name="tiTabBackground" format="reference" />
        <attr name="tiTabTextColor" format="reference|color" />
        <attr name="tiTabTextSize" format="reference|dimension" />
        <attr name="tiTabTextBlod" format="reference|boolean" />

        <attr name="tiUnderLineHeight" format="reference|dimension" />
        <attr name="tiUnderLineColor" format="reference|color" />
        <attr name="tiVisibleTabCount" format="reference|integer" />
        <attr name="tiDrawablePaddding" format="reference|integer"/>

        <!-- tab indicator mode -->
        <attr name="tiTabMode" format="enum">
            <enum name="line" value="0" />
            <enum name="triangle" value="1" />
            <enum name="rect" value="2" />
        </attr>

        <!-- line mode attrs -->
        <attr name="tiLineHeight" format="reference|dimension" />
        <attr name="tiLineColor" format="reference|color" />
        <attr name="tiLineStyle" format="enum">
            <enum name="match" value="0" />
            <enum name="wrap" value="1" />
        </attr>

        <!-- triangle mode attrs -->
        <attr name="tiTriangleHeight" format="reference|dimension" />
        <attr name="tiTriangleWidth" format="reference|dimension" />
        <attr name="tiTriangleColor" format="reference|color" />
        <attr name="tiTriangleStyle" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
        </attr>
        <attr name="tiTriangleStrokeWidth" format="reference|dimension" />

        <!-- rect mode attrs -->
        <attr name="tiRectColor" format="reference|color" />
        <attr name="tiRectRadius" format="reference|dimension" />
        <attr name="tiRectStyle" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
        </attr>
        <attr name="tiRectStrokeWidth" format="reference|dimension" />
        <attr name="tiRectStrokeColor" format="reference|color" />
    </declare-styleable>

    <attr name="indicator_style" format="reference" />
</resources>
